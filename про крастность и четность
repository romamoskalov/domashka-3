x, y, z = 120, 20, 360

if isinstance(x, int) and isinstance(y, int) and isinstance(z, int):
    print('All int nums')
    if x % 2:
        print ('Нечетное')
    else: print ('Четное')


    if x%20 == 0:
        print('кратно 20')
    else: print('не кратно 20')

    if y%40 == 0:
        print('кратно 40')
    else: print('не кратно 40')

    if z%60 == 0:
        print('кратно 60')
    else: print('не кратно 60')
